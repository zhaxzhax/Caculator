<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:layout_editor_absoluteY="81dp">
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:orientation="vertical">
         <!--<TextView-->
             <!--android:layout_width="match_parent"-->
             <!--android:layout_height="40dp"-->
             <!--android:text="简易计算器"-->
             <!--android:textSize="30sp"-->
             <!--android:gravity="center">-->
         <!--</TextView>-->
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="vertical"
             android:background="@drawable/border">
             <TextView
                 android:id="@+id/equation"
                 android:layout_width="match_parent"
                 android:layout_height="50dp"
                 android:text=""
                 android:textSize="40sp"
                 android:gravity="left">
             </TextView>
             <TextView
                 android:id="@+id/result"
                 android:layout_width="match_parent"
                 android:layout_height="50dp"
                 android:text=""
                 android:textSize="40sp"
                 android:gravity="right">
             </TextView>
         </LinearLayout>
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content">
             <Button
                 android:id="@+id/leftpa"
                 android:layout_width="0dp"
                 android:layout_height="80dp"
                 android:layout_weight="1"
                 android:background="@drawable/button_main"
                 android:textSize="50dp"
                 android:text="("/>

             <Button
                 android:id="@+id/rightpa"
                 android:layout_width="0dp"
                 android:layout_height="80dp"
                 android:layout_weight="1"
                 android:background="@drawable/button_main"
                 android:text=")"
                 android:textSize="50dp" />
             <Button
                 android:id="@+id/back"
                 android:layout_width="0dp"
                 android:layout_height="80dp"
                 android:layout_weight="1"
                 android:background="@drawable/button_main"
                 android:textSize="50dp"
                 android:text="←"/>
         </LinearLayout>
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content">
             <Button
                 android:id="@+id/division"
                 android:layout_width="0dp"
                 android:layout_height="80dp"
                 android:layout_weight="1"
                 android:background="@drawable/button_main"
                 android:textSize="50dp"
                 android:text="÷"/>

             <Button
                 android:id="@+id/sqrt"
                 android:layout_width="0dp"
                 android:layout_height="80dp"
                 android:layout_weight="1"
                 android:background="@drawable/button_main"
                 android:text="√￣"
                 android:textSize="50dp" />
             <Button
                 android:id="@+id/multiply"
                 android:layout_width="0dp"
                 android:layout_height="80dp"
                 android:layout_weight="1"
                 android:background="@drawable/button_main"
                 android:textSize="50dp"
                 android:text="X"/>
         </LinearLayout>
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content">
             <Button
                 android:id="@+id/seven"
                 android:layout_width="0dp"
                 android:layout_height="80dp"
                 android:layout_weight="1"
                 android:background="@drawable/button_main"
                 android:textSize="50dp"
                 android:text="7"/>

             <Button
                 android:id="@+id/eight"
                 android:layout_width="0dp"
                 android:layout_height="80dp"
                 android:layout_weight="1"
                 android:background="@drawable/button_main"
                 android:text="8"
                 android:textSize="50dp" />
             <Button
                 android:id="@+id/nine"
                 android:layout_width="0dp"
                 android:layout_height="80dp"
                 android:layout_weight="1"
                 android:background="@drawable/button_main"
                 android:textSize="50dp"
                 android:text="9"/>
             <Button
                 android:id="@+id/add"
                 android:layout_width="0dp"
                 android:layout_height="80dp"
                 android:layout_weight="1"
                 android:background="@drawable/button_main"
                 android:textSize="50dp"
                 android:text="+"/>
         </LinearLayout>
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content">
             <Button
                 android:id="@+id/four"
                 android:layout_width="0dp"
                 android:layout_height="80dp"
                 android:layout_weight="1"
                 android:background="@drawable/button_main"
                 android:textSize="50dp"
                 android:text="4"/>

             <Button
                 android:id="@+id/five"
                 android:layout_width="0dp"
                 android:layout_height="80dp"
                 android:layout_weight="1"
                 android:background="@drawable/button_main"
                 android:text="5"
                 android:textSize="50dp" />
             <Button
                 android:id="@+id/six"
                 android:layout_width="0dp"
                 android:layout_height="80dp"
                 android:layout_weight="1"
                 android:background="@drawable/button_main"
                 android:textSize="50dp"
                 android:text="6"/>
             <Button
                 android:id="@+id/substract"
                 android:layout_width="0dp"
                 android:layout_height="80dp"
                 android:layout_weight="1"
                 android:background="@drawable/button_main"
                 android:textSize="50dp"
                 android:text="-"/>
         </LinearLayout>
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content">
             <Button
                 android:id="@+id/one"
                 android:layout_width="0dp"
                 android:layout_height="80dp"
                 android:layout_weight="1"
                 android:background="@drawable/button_main"
                 android:textSize="50dp"
                 android:text="1"/>

             <Button
                 android:id="@+id/two"
                 android:layout_width="0dp"
                 android:layout_height="80dp"
                 android:layout_weight="1"
                 android:background="@drawable/button_main"
                 android:text="2"
                 android:textSize="50dp" />
             <Button
                 android:id="@+id/three"
                 android:layout_width="0dp"
                 android:layout_height="80dp"
                 android:layout_weight="1"
                 android:background="@drawable/button_main"
                 android:textSize="50dp"
                 android:text="3"/>
             <Button
                 android:id="@+id/delete"
                 android:layout_width="0dp"
                 android:layout_height="80dp"
                 android:layout_weight="1"
                 android:background="@drawable/button_main"
                 android:textSize="50dp"
                 android:text="C"/>
         </LinearLayout>
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content">
             <Button
                 android:id="@+id/dot"
                 android:layout_width="0dp"
                 android:layout_height="80dp"
                 android:layout_weight="1"
                 android:background="@drawable/button_main"
                 android:textSize="50dp"
                 android:text="."/>
             <Button
                 android:id="@+id/zero"
                 android:layout_width="0dp"
                 android:layout_height="80dp"
                 android:layout_weight="1"
                 android:background="@drawable/button_main"
                 android:text="0"
                 android:textSize="50dp" />
             <Button
                 android:id="@+id/equal"
                 android:layout_width="0dp"
                 android:layout_height="80dp"
                 android:layout_weight="2"
                 android:background="@drawable/button_main"
                 android:textSize="50dp"
                 android:text="="/>
         </LinearLayout>
         <TextView
             android:layout_width="match_parent"
             android:layout_height="500dp"
             android:background="@drawable/button_main"/>
     </LinearLayout>
</android.support.constraint.ConstraintLayout>